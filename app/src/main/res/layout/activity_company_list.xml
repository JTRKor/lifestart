<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyListActivity"
    android:orientation="vertical"
    android:background="@drawable/shape_main_rectangle"
    >

    <RelativeLayout
        android:id="@+id/rel_c_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn_c_i_back"
            android:layout_above="@+id/view_resume_var"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="공고 목록"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ffffff"
            />
    </RelativeLayout>
    <View
        android:id="@+id/c_view"
        android:layout_below="@+id/rel_c_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#8C8C8C"
        />
    <LinearLayout
        android:id="@+id/c_linear"
        android:layout_below="@+id/c_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="공고명"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="지원자명"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/c_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_main_rectangle"
        >
        <ListView
            android:id="@+id/lv_com_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</RelativeLayout>