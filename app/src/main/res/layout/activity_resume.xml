<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumeActivity"
    android:background="@drawable/shape_main_rectangle"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/resume_main_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="개인정보 작성란"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            />
        <View
            android:id="@+id/view_res_var"
            android:layout_below="@+id/resume_main_txt"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_below="@+id/view_res_var"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_resume_manager"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:text="이력서 관리"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="이름 : "
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/ed_resume_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="이름을 입력해주세요."
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/shape_rectangle"
                    android:maxLength="30"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_visible_R_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="이름을 입력해주세요."
                android:gravity="left|center"
                android:layout_marginLeft="15dp"
                android:textColor="#ff0000"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <Button
                    android:id="@+id/btn_per_cal"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="생년월일"
                    android:textSize="18dp"
                    android:background="@drawable/shape_button"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/shape_rectangle"
                    >
                    <TextView
                        android:id="@+id/ed_resume_y"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="15dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/ed_resume_m"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="15dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/ed_resume_d"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_visible_R_ymd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="생년월일을 입력해주세요."
                android:gravity="left|center"
                android:layout_marginLeft="15dp"
                android:textColor="#ff0000"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="성별 : "
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />
                <EditText
                    android:id="@+id/ed_resume_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="성별을 입력해주세요. ex).남자or여자"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/shape_rectangle"
                    android:maxLength="10"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_visible_R_gender"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="성별을 입력해주세요."
                android:gravity="left|center"
                android:layout_marginLeft="15dp"
                android:textColor="#ff0000"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:text="우편번호 : "
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/txt_resume_address0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="00-00"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/shape_rectangle"
                    />
                <Button
                    android:id="@+id/btn_resume_find_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button"
                    android:layout_margin="3dp"
                    android:text="주소찾기"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="주소 : "
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/txt_resume_address1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="주소를 입력해주세요."
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/shape_rectangle"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="상세주소 : "
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />
                <EditText
                    android:id="@+id/ed_resume_address2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="상세주소를 입력해주세요."
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/shape_rectangle"
                    android:maxLength="30"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_visible_R_address"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="주소를 입력해주세요."
                android:gravity="left|center"
                android:layout_marginLeft="15dp"
                android:textColor="#ff0000"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="학력 : "
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />
                <EditText
                    android:id="@+id/ed_resume_school"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="학력을 입력해주세요. ex).고등학교"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/shape_rectangle"
                    android:maxLength="30"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="구분 : "
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />
                <EditText
                    android:id="@+id/ed_resume_school_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_rectangle"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:hint="ex).졸업, 졸업예정자, 중퇴 등"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_visible_R_school"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="학력을 입력해주세요."
                android:gravity="left|center"
                android:layout_marginLeft="15dp"
                android:textColor="#ff0000"
                android:visibility="gone"
                />
        <Button
            android:id="@+id/btn_resume_store"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="정보저장"
            android:textSize="20dp"
            android:background="@drawable/shape_button"
            android:layout_margin="10dp"
            />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>