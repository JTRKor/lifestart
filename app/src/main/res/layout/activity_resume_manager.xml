<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumeManagerActivity"
    android:background="@drawable/shape_main_rectangle"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/txt_resume_manager"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="이력서 관리현황"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_r_m_back"
            android:layout_above="@+id/view_resume_var"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"
            />
        <View
            android:id="@+id/view_resume_var"
            android:layout_below="@+id/txt_resume_manager"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#979797"
            android:layout_marginBottom="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_resume_var"
            >

            <ListView
                android:id="@+id/lv_r_m"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />
            <Button
                android:id="@+id/btn_plus_resume"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/plus"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>